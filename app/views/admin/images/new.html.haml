- @page_title = 'New Image - ' + default_page_title

- render_region :top do |top|
  - top.title do
    %h1 New Image
  
- form_for [:admin, @image], :html => {:multipart => true, :id => 'new_image', 'data-onsubmit_status'=>"Creating Image&#8230;"} do |fields|
  #fields
    = render :partial => '/admin/images/edit/fields', :locals => { :fields => fields }

  #fields_bottom
    = render :partial => '/admin/images/edit/fields_bottom'